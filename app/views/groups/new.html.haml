.authform
  = form_for @group, html: {:role => 'form'} do |f|
    %h3 New group
    - if @group.errors.any?
      #error_explanation
        = render 'shared/messages', obj: @group
    .form-group
      = f.label :name
      = f.text_field :name, autofocus: true, class: 'form-control'
    .form-group
      = f.text_field :created_by, hidden: "hidden", value: current_user.id

    = f.submit "Add group", :class => 'button right'
    = render "shared/form_nav_links", locals: { back: true }