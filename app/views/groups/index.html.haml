.container
  .row
    .col-md-3
      #select_users{style: "display:none"}
    .col-md-9
      %h3
        List of groups
        %table.my_table
          %thead
            %tr
              %th Title
              %th Created by
              %th Users in group
              %th
          %tbody
            - @groups.each do |group|  
              %tr
                %td= group.name
                %td= group.owner.full_name
                %td
                  - if group.users.any?
                    = render 'users_in_group', obj: group.users
                %td
                  =link_to "Add new users | ", select_users_groups_path(group.id), remote: true
                  =link_to 'Edit group | ', edit_group_path(group)
                  =link_to 'Destroy group', group_path(group), method: :delete
          %tfoot
            %tr
              %td{:span => 3}
                %strong All groups
              %td
                %strong
                  =@groups.length
              %td
              %td 
      %ul.nav.nav-pills
        %li
          =link_to "New group", new_group_path
        %li.active
          =link_to "Home", root_path
