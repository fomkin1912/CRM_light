.authform
  = form_for @company_type, html: {method: :patch, :role => 'form'} do |f|
    %h3 Change company type
    - if @company_type.errors.any?
      #error_explanation
        = render 'shared/messages', obj: @company_type
    .form-company_type
      = f.label :title
      = f.text_field :title, autofocus: true, class: 'form-control'
    = f.submit "Change type", :class => 'button right'
    = render "shared/form_nav_links", locals: { back: true }